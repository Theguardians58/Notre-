# Backend Configuration
# Choose your backend: 'supabase', 'firebase', or 'appwrite'
# Default: supabase (PostgreSQL - best for most use cases)
NEXT_PUBLIC_BACKEND=supabase

# ===================================
# Firebase Configuration (Default)
# ===================================
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# ===================================
# Appwrite Configuration (Alternative)
# ===================================
# Appwrite Cloud: https://cloud.appwrite.io/v1
# Self-hosted: http://localhost/v1
NEXT_PUBLIC_APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
NEXT_PUBLIC_APPWRITE_PROJECT_ID=your_appwrite_project_id

# Database Configuration
NEXT_PUBLIC_APPWRITE_DATABASE_ID=cogninote_db

# Collection IDs
NEXT_PUBLIC_APPWRITE_NOTES_COLLECTION_ID=notes
NEXT_PUBLIC_APPWRITE_USERS_COLLECTION_ID=users
NEXT_PUBLIC_APPWRITE_PRESENCE_COLLECTION_ID=presence

# Storage Bucket ID
NEXT_PUBLIC_APPWRITE_STORAGE_BUCKET_ID=cogninote_storage

# ===================================
# Supabase Configuration (Alternative Backend)
# ===================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# ===================================
# AI Configuration (Optional)
# ===================================
NEXT_PUBLIC_DEFAULT_AI_PROVIDER=gemini
